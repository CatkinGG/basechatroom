<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sent_text"
        android:padding="10dp"
        android:textColor="@color/contact_record_sent_text"
        android:textSize="14sp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tool:text="一二三四五六七八九十一二三四五六七八九十一"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="7dp"
        android:textColor="@color/contact_record_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tv_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_content"
        tool:text="2019-03-18 18:30"/>

</androidx.constraintlayout.widget.ConstraintLayout>